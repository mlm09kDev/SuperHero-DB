<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"

        android:background="@color/primary_light"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_connections_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Connections"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_subHeader"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_connections_groups_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:text="Group Affiliation:"
            android:textColor="@color/primary_text"
            app:layout_constraintStart_toStartOf="@+id/textView_connections_header"
            app:layout_constraintTop_toBottomOf="@+id/textView_connections_header" />


        <TextView
            android:id="@+id/textView_connections_groups_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/secondary_text"
            app:layout_constraintBottom_toBottomOf="@+id/textView_connections_groups_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textView_connections_groups_header"
            app:layout_constraintTop_toTopOf="@+id/textView_connections_groups_header"
            app:layout_constraintVertical_bias="0.0"
            tools:text="batman family, batman family, batman family, batman family, batman family, batman family, batman family, batman family, batman family, " />

        <TextView
            android:id="@+id/textView_connections_relatives_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Relatives:"
            android:textColor="@color/primary_text"
            app:layout_constraintStart_toStartOf="@+id/textView_connections_groups_header"
            app:layout_constraintTop_toBottomOf="@+id/textView_connections_groups_text" />

        <TextView
            android:id="@+id/textView_connections_relatives_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/secondary_text"
            app:layout_constraintBottom_toBottomOf="@+id/textView_connections_relatives_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textView_connections_relatives_header"
            app:layout_constraintTop_toTopOf="@+id/textView_connections_relatives_header"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Dick Grayson(son), Dick Grayson(son), Dick Grayson(son), Dick Grayson(son), Dick Grayson(son), Dick Grayson(son), Dick Grayson(son), " />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>