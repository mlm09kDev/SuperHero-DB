<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/imageView_favorites_image"
        android:layout_width="96dp"
        android:layout_height="81dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/textView_favorites_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="#de000000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Batman" />

    <TextView
        android:id="@+id/textView_favorites_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="#de000000"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_favorites_name"
        tools:text="Gotham" />

    <TextView
        android:id="@+id/textView_favorites_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="2dp"
        android:text=""
        android:textColor="#de000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_favorites_name"
        app:layout_constraintEnd_toStartOf="@+id/imageView_favorites_image"
        app:layout_constraintStart_toEndOf="@+id/textView_superHero_name"
        app:layout_constraintTop_toTopOf="@+id/textView_favorites_name"
        tools:text="ID = 67" />

</androidx.constraintlayout.widget.ConstraintLayout>